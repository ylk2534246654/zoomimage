<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ZoomImageView">
        <attr name="contentScale" format="enum">
            <enum name="crop" value="0" />
            <enum name="fit" value="1" />
            <enum name="fillHeight" value="2" />
            <enum name="fillWidth" value="3" />
            <enum name="inside" value="4" />
            <enum name="none" value="5" />
            <enum name="fillBounds" value="6" />
        </attr>
        <attr name="alignment" format="enum">
            <enum name="topStart" value="0" />
            <enum name="topCenter" value="1" />
            <enum name="topEnd" value="2" />
            <enum name="centerStart" value="3" />
            <enum name="center" value="4" />
            <enum name="centerEnd" value="5" />
            <enum name="bottomStart" value="6" />
            <enum name="bottomCenter" value="7" />
            <enum name="bottomEnd" value="8" />
        </attr>
        <attr name="animateScale" format="boolean" />
        <attr name="rubberBandScale" format="boolean" />
        <attr name="exceedScale" format="boolean" />
        <attr name="threeStepScale" format="boolean" />
        <attr name="limitOffsetWithinBaseVisibleRect" format="boolean" />
        <attr name="readMode" format="enum">
            <enum name="both" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
            <enum name="none" value="3" />
        </attr>

        <attr name="showTileBounds" format="boolean" />
        <attr name="disabledBackgroundTiles" format="boolean" />
        <attr name="tileAnimation" format="boolean" />
        <attr name="pausedContinuousTransformTypes" format="flags">
            <flag name="none" value="0" />
            <flag name="scale" value="1" />
            <flag name="offset" value="2" />
            <flag name="locate" value="4" />
            <flag name="gesture" value="8" />
            <flag name="fling" value="16" />
        </attr>

        <attr name="disabledScrollBar" format="boolean" />
        <attr name="scrollBarColor" format="color|reference" />
        <attr name="scrollBarSize" format="dimension|reference" />
        <attr name="scrollBarMargin" format="dimension|reference" />
    </declare-styleable>
</resources>